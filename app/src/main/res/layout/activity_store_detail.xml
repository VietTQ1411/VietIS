<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StoreDetailActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsvStoreView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/imageViewShopIcon"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@mipmap/ic_launcher"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="start|center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cửa hàng bún đậu mắm tôm"
                        android:textColor="@color/colorBlack"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewAuthor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hoa lạc resort đường láng quang việt"
                        android:textColor="@color/colorBlack" />

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hotline: 12345678"

                        android:textColor="@color/colorBlack" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/button"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Chọn món" />
                        <Button
                            android:id="@+id/button1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Chỉ đường" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/txtRating"
                style="@style/CodeFont"
                android:layout_marginLeft="0dp"
                android:text="Đánh giá của cửa hàng:"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:id="@+id/rate">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="0dp">
                <RatingBar
                    android:id="@+id/ratingBar1"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="1.3"
                    android:scaleY="1.3"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp"
                    android:max="5"
                    android:progressTint="@color/colorGold"
                    android:rating="5"
                    android:stepSize="1.0"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/txtRating1"
                    style="@style/CodeFont3"
                    android:text="10 lượt đánh giá"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="0dp">
                <RatingBar
                    android:id="@+id/ratingBar2"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="1.3"
                    android:scaleY="1.3"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp"
                    android:max="5"
                    android:progressTint="@color/colorGold"
                    android:rating="4"
                    android:stepSize="1.0"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/txtRating2"
                    style="@style/CodeFont3"
                    android:text="10 lượt đánh giá"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="0dp">
                <RatingBar
                    android:id="@+id/ratingBar3"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="1.3"
                    android:scaleY="1.3"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp"
                    android:max="5"
                    android:progressTint="@color/colorGold"
                    android:rating="3"
                    android:stepSize="1.0"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/txtRating3"
                    style="@style/CodeFont3"
                    android:text="10 lượt đánh giá"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="0dp">
                <RatingBar
                    android:id="@+id/ratingBar4"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="1.3"
                    android:scaleY="1.3"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp"
                    android:max="5"
                    android:progressTint="@color/colorGold"
                    android:rating="2"
                    android:stepSize="1.0"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/txtRating4"
                    style="@style/CodeFont3"
                    android:text="10 lượt đánh giá"/>
            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
                android:layout_marginBottom="0dp">
            <RatingBar
                android:id="@+id/ratingBar5"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="1.3"
                android:scaleY="1.3"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp"
                android:max="5"
                android:progressTint="@color/colorGold"
                android:rating="1"
                android:stepSize="1.0"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/txtRating5"
                style="@style/CodeFont3"
                android:text="10 lượt đánh giá"/>
        </LinearLayout>

        </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/CommentRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="20dp"
                >
            </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtDescriptionVisible"
                style="@style/CodeFont2"
                android:text="Description ▼"/>
            <TextView
                android:id="@+id/txtStoreDescription"
                style="@style/CodeFont"
                android:text=""/>
        </LinearLayout>

            <TextView
                android:id="@+id/abc"
                style="@style/CodeFont2"
                android:text="Món ăn nổi bật"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/FoodRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                >
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>